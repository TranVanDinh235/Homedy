<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.FilterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="40dp"
                android:text="Lọc theo vị trí"
                android:textSize="24dip"
                android:textColor="@color/blue"/>
            <Button android:id="@+id/btn_search_city"
                android:textAllCaps="false"
                android:text="Thành phố"
                android:background="@drawable/btn_newpost_background"/>
            <Button android:id="@+id/btn_search_distric"
                android:textAllCaps="false"
                android:text="Quận/Huyện"
                android:background="@drawable/btn_newpost_background"/>
            <Button android:id="@+id/btn_search_commune"
                android:textAllCaps="false"
                android:text="Phường/Xã"
                android:background="@drawable/btn_newpost_background"/>
            <Button android:id="@+id/btn_search_street"
                android:textAllCaps="false"
                android:text="Đường"
                android:background="@drawable/btn_newpost_background"/>
            <TableRow>
                <TextView
                    android:layout_width="100dp"
                    android:text="Giá"/>
                <Button android:id="@+id/btn_search_price"
                    android:layout_width="300dp"
                    android:textAllCaps="false"
                    android:text="2-3 Triệu"
                    android:background="@drawable/btn_newpost_background"/>
            </TableRow>
            <TableRow>
                <TextView android:text="Diên tích" />
                <Button android:id="@+id/btn_search_area"
                    android:textAllCaps="false"
                    android:text="10-15 m2"
                    android:background="@drawable/btn_newpost_background"
                    />
            </TableRow>
            <TableRow>
                <TextView android:text="Sắp xếp"/>
                <Button android:id="@+id/btn_search_sort"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_newpost_background"/>
            </TableRow>
            <TableRow>
                <TextView />
            </TableRow>
            <Button
                android:id="@+id/btn_search_oke"
                android:background="@drawable/btn_color_blue"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:text="Lọc"
                android:textAllCaps="false" />
        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>