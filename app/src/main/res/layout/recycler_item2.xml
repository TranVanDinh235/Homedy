<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/img_purchase"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/price_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="799 trieu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/location_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/img_purchase"
        app:layout_constraintLeft_toLeftOf="@id/img_purchase"
        />
    <TextView
        android:id="@+id/time_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/img_purchase"
        app:layout_constraintBottom_toBottomOf="@+id/img_purchase"
        />
    <TextView
        android:id="@+id/name_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_purchase"
        />
    <TextView
        android:id="@+id/address_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_purchase"
        />



</android.support.constraint.ConstraintLayout>