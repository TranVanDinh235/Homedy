<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="30dp">
            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/state_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:spb_maxStateNumber="three"
                app:spb_currentStateNumber="one"
                app:layout_constraintTop_toBottomOf="parent"
                android:paddingBottom="50dp"
                />
            <Button
                android:id="@+id/btn_post_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tỉnh/Thành Phố"/>
            <Button
                android:id="@+id/btn_post_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quận/Huyện"/>
            <Button
                android:id="@+id/btn_post_commune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phường/Xã"/>
            <Button
                android:id="@+id/btn_post_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đường"/>
            <EditText
                android:id="@+id/edt_post_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_post_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huỷ"/>
                <Button
                    android:id="@+id/btn_post_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếp tục"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>